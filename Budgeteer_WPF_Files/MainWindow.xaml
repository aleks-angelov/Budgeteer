<Window x:Class="Budgeteer_WPF_Files.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Budgeteer_WPF_Files"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Budgeteer - Your Family Budget Tracker" Height="860" Width="1280" WindowStartupLocation="CenterScreen"
        Background="#FFE5E5E5" ResizeMode="CanMinimize">
    <DockPanel LastChildFill="True">
        <Menu x:Name="menu" DockPanel.Dock="Top" Height="30" VerticalAlignment="Top">
            <MenuItem Header="MenuItem" Height="28" />
        </Menu>
        <StatusBar DockPanel.Dock="Bottom" Height="30" />
        <TabControl x:Name="tabControl" TabStripPlacement="Left" SelectedIndex="1">
            <TabItem Width="192" Height="173" Focusable="False">
                <TabItem.Header>
                    <Calendar FirstDayOfWeek="Monday" />
                </TabItem.Header>
            </TabItem>
            <TabItem Header="Overview" Height="146">
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="172*" />
                        <RowDefinition Height="290*" />
                        <RowDefinition Height="303*" />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Margin="30,53,106,35" Orientation="Horizontal">
                        <Label x:Name="label" Content="Date:" HorizontalAlignment="Left" VerticalAlignment="Top"
                               RenderTransformOrigin="0.132,-0.385" Width="105" HorizontalContentAlignment="Center" />
                        <Separator Opacity="0" Width="32" />
                        <Label x:Name="label_Copy" Content="Person:" HorizontalAlignment="Left" VerticalAlignment="Top"
                               RenderTransformOrigin="0.132,-0.385" Width="150" HorizontalContentAlignment="Center" />
                        <Separator Opacity="0" Width="32" />
                        <Label x:Name="label_Copy1" Content="Type:" HorizontalAlignment="Left" VerticalAlignment="Top"
                               RenderTransformOrigin="0.132,-0.385" Width="104" HorizontalContentAlignment="Center" />
                        <Separator Opacity="0" Width="32" />
                        <Label x:Name="label_Copy2" Content="Category:" HorizontalAlignment="Left"
                               VerticalAlignment="Top" RenderTransformOrigin="0.132,-0.385" Width="150"
                               HorizontalContentAlignment="Center" />
                        <Separator Opacity="0" Width="32" />
                        <Label x:Name="label_Copy3" Content="Amount:" HorizontalAlignment="Left"
                               VerticalAlignment="Top" RenderTransformOrigin="0.132,-0.385" Width="90"
                               HorizontalContentAlignment="Center" />
                        <Separator Opacity="0" Width="32" />
                        <Label x:Name="label_Copy4" Content="Note (optional):" HorizontalAlignment="Left"
                               VerticalAlignment="Top" RenderTransformOrigin="0.132,-0.385" Width="180"
                               HorizontalContentAlignment="Center" />
                    </StackPanel>
                    <StackPanel Grid.Row="0" Margin="30,85,106,3" Orientation="Horizontal">
                        <DatePicker HorizontalAlignment="Left" VerticalAlignment="Top" FirstDayOfWeek="Monday"
                                    Width="105" SelectedDate="{x:Static sys:DateTime.Now}"/>
                        <Separator Opacity="0" Width="31" />
                        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" VerticalAlignment="Top"
                                  Width="150" IsEditable="True" />
                        <Separator Opacity="0" Width="31" />
                        <RadioButton x:Name="radioButton" Content="Debit" HorizontalAlignment="Left"
                                     VerticalAlignment="Top" IsChecked="True" GroupName="EntryType" Margin="0,5,0,0" />
                        <Separator Opacity="0" Width="10" />
                        <RadioButton x:Name="radioButton1" Content="Credit" HorizontalAlignment="Left" Margin="0,5,0,0"
                                     VerticalAlignment="Top" GroupName="EntryType" />
                        <Separator Opacity="0" Width="31" />
                        <ComboBox x:Name="comboBox_Copy" HorizontalAlignment="Left" VerticalAlignment="Top"
                                  Width="150" IsEditable="True" />
                        <Separator Opacity="0" Width="31" />
                        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top"
                                 Width="90" />
                        <Separator Opacity="0" Width="31" />
                        <TextBox x:Name="textBox_Copy" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top"
                                 Width="180" />
                    </StackPanel>
                    <Button x:Name="button" Grid.Row="0" Content="Add" HorizontalAlignment="Left" Margin="989,62,0,0"
                            VerticalAlignment="Top" Width="46" Height="46" />
                    <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="30,13,0,0" Grid.Row="1"
                              VerticalAlignment="Top" Height="270" Width="1005" />
                    <WindowsFormsHost HorizontalAlignment="Left" Height="283" Margin="30,10,0,0" Grid.Row="2"
                                      VerticalAlignment="Top" Width="487" />
                    <WindowsFormsHost HorizontalAlignment="Left" Height="283" Margin="548,10,0,0" Grid.Row="2"
                                      VerticalAlignment="Top" Width="487" />
                </Grid>
            </TabItem>
            <TabItem Header="Expenditure" Height="146">
                <Grid Background="#FFE5E5E5" />
            </TabItem>
            <TabItem Header="Income" Height="146">
                <Grid Background="#FFE5E5E5" />
            </TabItem>
            <TabItem Header="Balance" Height="146">
                <Grid Background="#FFE5E5E5" />
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>