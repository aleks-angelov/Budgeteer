@model Budgeteer_Web.Models.CategoryViewModel

@using (Html.BeginForm("AddCategory", Model.IsDebit ? "Spending" : "Income", FormMethod.Post, new { @class = "form-inline", role = "form", style = "display:inline" }))
{
    <div class="form-group margin-right-sm" style="width: 162px">
        @Html.LabelFor(cvm => cvm.Name, "New Category:")
        @Html.TextBoxFor(cvm => cvm.Name, new { @class = "form-control", id = "NewCategoryName", style = "width:162px" })
    </div>

    @Html.HiddenFor(cvm => cvm.IsDebit)

    <button type="submit" class="btn btn-default" style="margin-top: 25px">Add</button>
}