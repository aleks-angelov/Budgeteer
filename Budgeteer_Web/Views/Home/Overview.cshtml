@using Budgeteer_Web.Infrastructure

@{
    ViewBag.Title = "Overview";
}

<h2>@ViewBag.Title</h2>

@Html.Action("AddTransaction")

<div class="table-responsive" style="margin-top: 20px">
    <table class="table table-striped table-bordered table-hover table-condensed">
        <thead>
            <tr>
                <th style="width: 160px">Date</th>
                <th style="width: 199px">Person</th>
                <th style="width: 165px">Type</th>
                <th style="width: 200px">Category</th>
                <th style="width: 151px">Amount</th>
                <th>Note</th>
            </tr>
        </thead>
        <tbody id="tableBody">
            @Html.Action("ListTransactions")
        </tbody>
    </table>
</div>

<div>
    <img src="@Url.Action("DisplayChart", new {options = new ChartFactoryOptions {IsColumn = true, Type = TransactionType.Both, From = DateTime.Today.AddMonths(-6), Until = DateTime.Today, CategoryName = null, PersonName = null}})" alt="Budget Balance (last 6 months)"/>

    <img src="@Url.Action("DisplayChart", new { options = new ChartFactoryOptions { IsColumn = false, Type = TransactionType.Debit, From = DateTime.Today.AddMonths(-6), Until = DateTime.Today, CategoryName = null, PersonName = null } })" alt="Spending Distribution (last 6 months)" />
</div>