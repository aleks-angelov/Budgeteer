@using Budgeteer_Web.Models
@model IEnumerable<Transaction>

@{
    ViewBag.Title = "Overview";
}

<h2>@ViewBag.Title</h2>

@Html.Action("AddTransaction")

<div class="table-responsive" style="margin-top: 20px">
    <table class="table table-striped table-bordered table-hover table-condensed">
        <thead>
            <tr>
                <th style="width: 160px">Date</th>
                <th style="width: 199px">Person</th>
                <th style="width: 165px">Type</th>
                <th style="width: 200px">Category</th>
                <th style="width: 151px">Amount</th>
                <th>Note</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Transaction t in Model)
            {
                <tr>
                    <td>@t.Date.ToShortDateString()</td>
                    <td>@t.Person.Name</td>
                    @if (t.Category.IsDebit)
                    {
                        <td>Debit</td>
                    }
                    else
                    {
                        <td>Credit</td>
                    }
                    <td>@t.Category.Name</td>
                    <td>@t.Amount</td>
                    <td>@t.Note</td>
                </tr>
            }
        </tbody>
    </table>
</div>